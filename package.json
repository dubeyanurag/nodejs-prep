{
  "name": "nodejs-interview-prep",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "export": "next build && next export",
    "start": "next start",
    "lint": "next lint",
    "serve": "npx serve out",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "bundle-analyzer": "npx @next/bundle-analyzer",
    "lighthouse": "npx lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "perf:audit": "npm run build && npm run lighthouse",
    "deploy": "npm run build && touch out/.nojekyll && node scripts/generate-sitemap.js",
    "sitemap": "node scripts/generate-sitemap.js"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.16",
